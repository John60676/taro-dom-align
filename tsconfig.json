{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"]
}

